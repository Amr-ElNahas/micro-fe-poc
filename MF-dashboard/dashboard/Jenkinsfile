pipeline {
    parameters {
      string(name: 'HOST', description: 'Ingress host', defaultValue: 'poc.inma.com')
      choice(name: 'ENV', choices: ['test', 'dev', 'prod'], description: 'Angular environment')
      choice(name: 'NAMESPACE', choices: ['axa-motors'], description: 'K8s Namespace')
      choice(name: 'DOCKER_REGISTRY', choices: ['registry.sumerge.local'], description: 'Docker registry')
    }
    environment {
      registry = "${DOCKER_REGISTRY}/${NAMESPACE}/"
	  dockerImage = ''
    }

    agent {
            kubernetes {
                cloud 'kubernetes'
                inheritFrom 'k8s-jnlp-npm14'
            }
        }

    stages {

	  stage('Docker'){
        stages {
		  stage('Create Image') {
            steps {
              dir('MF-dashboard/dashboard') {
              script {
sh 'sed -i "s|@DOCKER_REGISTRY@|${DOCKER_REGISTRY}|g" Dockerfile'
                dockerImage = docker.build registry + "dashboard:$BUILD_NUMBER"
              }
            }
            }
          }

          stage('Push Image') {
            steps {
              dir('MF-dashboard/dashboard') {
              script {
                docker.withRegistry( '' ) {
                dockerImage.push()
			  }
            }
              }
          }
        }
	  }
	}

	stage ('K8s deploy') {
      steps{
        dir('MF-dashboard/dashboard') {
        sh """
        sed -i "s|@BUILD_NUMBER@|${BUILD_NUMBER}|g" $WORKSPACE/MF-dashboard/dashboard/kubernetes.yml
        sed -i "s|@HOST@|${HOST}|g" $WORKSPACE/MF-dashboard/dashboard/kubernetes.yml
        sed -i "s|@DOCKER_REGISTRY@|${DOCKER_REGISTRY}|g" $WORKSPACE/MF-dashboard/dashboard/kubernetes.yml
        sed -i "s|@NAMESPACE@|${NAMESPACE}|g" $WORKSPACE/MF-dashboard/dashboard/kubernetes.yml
        kubectl apply -f $WORKSPACE/MF-dashboard/dashboard/kubernetes.yml -n ${NAMESPACE}
        """
        }
      }
    }
  }
}
